<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bnsantos.dribble.ui.ShotActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <include layout="@layout/adapter_shots" android:id="@+id/header"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:padding="@dimen/small_margin">
      <com.facebook.drawee.view.SimpleDraweeView
          android:id="@+id/avatar"
          android:layout_width="@dimen/avatar_size"
          android:layout_height="@dimen/avatar_size"
          fresco:actualImageScaleType="fitCenter"
          fresco:roundAsCircle="true"/>
      <TextView
          android:id="@+id/name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:layout_marginLeft="@dimen/margin"
          android:layout_marginStart="@dimen/margin"
          android:maxLines="2"
          android:ellipsize="end"
          android:layout_toEndOf="@+id/avatar"
          android:layout_toRightOf="@+id/avatar"
          android:textStyle="bold"
          android:textSize="16sp"/>
      <TextView
          android:id="@+id/location"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/small_margin"
          android:gravity="center_vertical"
          android:textSize="12sp"
          android:text="@string/no_location"
          android:drawableStart="@drawable/ic_location_black_18dp"
          android:drawableLeft="@drawable/ic_location_black_18dp"
          android:layout_below="@id/avatar"/>
      <TextView
          android:id="@+id/web"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/small_margin"
          android:gravity="center_vertical"
          android:textSize="12sp"
          android:maxLines="1"
          android:drawableStart="@drawable/ic_web_black_18dp"
          android:drawableLeft="@drawable/ic_web_black_18dp"
          android:text="@string/no_web"
          android:layout_below="@id/location"
          android:layout_toLeftOf="@+id/twitter"
          android:layout_toStartOf="@+id/twitter"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"/>
      <View
          android:id="@+id/divider"
          android:layout_width="1dp"
          android:layout_height="1dp"
          android:layout_centerInParent="true"/>
      <TextView
          android:id="@+id/twitter"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/small_margin"
          android:gravity="center_vertical"
          android:textSize="12sp"
          android:maxLines="1"
          android:text="@string/no_twitter"
          android:drawableStart="@drawable/ic_twitter_black_18dp"
          android:drawableLeft="@drawable/ic_twitter_black_18dp"
          android:layout_toRightOf="@id/divider"
          android:layout_toEndOf="@id/divider"
          android:layout_below="@id/location"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true"/>
      <TextView
          android:id="@+id/followers"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/small_margin"
          android:textSize="12sp"
          android:maxLines="1"
          android:layout_below="@id/web"
          android:layout_toLeftOf="@+id/likesCount"
          android:layout_toStartOf="@+id/likesCount"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:text="@string/followers_d"/>

      <TextView
          android:id="@+id/likesCount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/small_margin"
          android:textSize="12sp"
          android:maxLines="1"
          android:layout_toRightOf="@id/divider"
          android:layout_toEndOf="@id/divider"
          android:layout_below="@id/twitter"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true"
          android:text="@string/likes_d"/>
      <TextView
          android:id="@+id/bioTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin"
          android:text="@string/bio"
          android:textSize="16sp"
          android:textStyle="bold"
          android:layout_below="@id/likesCount"/>
      <TextView
          android:id="@+id/bio"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin"
          android:textSize="14sp"
          android:layout_below="@id/bioTitle"/>
    </RelativeLayout>

  </LinearLayout>

</ScrollView>
